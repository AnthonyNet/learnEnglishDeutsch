<%- include('../partials/header') %>

<%- include('../partials/navbar') %>

<div class="dropdown text-center mt-5">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    Vyber lekci
  </button>
  <button class="btn btn-secondary" id="showAllIrregular">Ukaž vše</button>

  <!-- 
    Create DropdownMenu
    *its sorted alphabetically by 10 words for 1 menu folder
  -->
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">

   <% let createGerDropdownMenu = () => { %>
    <% for(let i=1; i<=160; i+=10){ %>
      <li class="p-1"><a class="dropdown-item" href="#"><%= i %>-<%= i+9%></a></li>
    <% } %>
    <% } %>

    <%= createGerDropdownMenu() %>

    <li class="p-1"><a class="dropdown-item" href="#">160-173</a></li>

    
  </ul>
</div>



<section class=" text-light mt-5">
    <div class="container">
        
  
            
        

<% const deVerben = unregelmassigeVerben.verben; %>

<% let createCarousels = (x, y, verb) => { %>
  
<div class="row mb-5 hideJQ">
  <div class="cover ">
 



<div id="carouselExampleControls<%= y %>" class="carousel slide text-primary p-5 d-flex align-items-center justify-content-center " data-bs-ride="false" style="height: 90vh;">
    <div class="carousel-inner ">
      <div class="carousel-item active ">

        
        <div class="text-center">
          <h1>Unregelmäßige Verben Übung: <%=x%> - <%=y%></h1>
        </div>

      </div>


    
    <%  for (let index = x; index <= y; index++) { %>

        <div class="carousel-item">

          <h1 class="text-center">Slovo #<%=index%></h1>

            <div class="card cardIrr text-center" style="width: 18rem; margin: 0 auto;" id="<%= verb[index].cz %>">
                <div class="card-header">
                  <h3 class=" text-primary mb-1"><%= verb[index].cz %>
                    <%if(verb[index].cz2){%>-
                      <%=verb[index].cz2%> 
                    <% } %>
                  </h3>
                
            </div>

            <ul class="list-group list-group-flush">
              <li class="list-group-item">Infinitive:</li>
                <li class="list-group-item"><input id="slovo_ID" data-verb="<%= verb[index].infinitive %>" type="text"></li>
                <li class="list-group-item">Präteritum:</li>
                <li class="list-group-item"><input id="slovo_ID" data-verb="<%= verb[index].pastTense %>" type="text"></li>
                
                <%if(verb[index].pastTense2){%>
                  <li class="list-group-item">Präteritum2:</li>
                  <li class="list-group-item"><input id="slovo_ID" data-verb="<%= verb[index].pastTense2 %>" type="text"></li>
                <% } %>

                <li class="list-group-item">Perfektum:</li>
                <li class="list-group-item"><input id="slovo_ID" data-verb="<%= verb[index].presentPerfect %>" type="text" ></li>

                <%if(verb[index].presentPerfect2){%>
                  <li class="list-group-item">Perfektum2:</li>
                  <li class="list-group-item"><input id="slovo_ID" data-verb="<%= verb[index].presentPerfect2 %>" type="text"></li>
                <% } %>

                <li class="list-group-item">Správná odpověď:</li>
                <li class="list-group-item answerCard">
                  <%= verb[index].infinitive %> 
                  <%= verb[index].pastTense %> 

                  <%if(verb[index].pastTense2){%>
                  <%= verb[index].pastTense2 %>
                  <% } %>
                  
                  <%= verb[index].presentPerfect %>
                
                  <%if(verb[index].presentPerfect2){%>
                    <%= verb[index].presentPerfect2 %>"
                    <% } %>
                </li>
          </ul>
        </div>

  </div>

       <% } %>
    
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls<%= y %>" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls<%= y %>" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  </div>
  </div>
  
  <% } %>

<!--
  FUNCTION CREATES CAROUSEL FOR 10 WORDS FROM JSON FILE
  *FROM 0 TO 10, 11-20, 21-30 ETC...
-->

  <% createCarousels(0, 10, deVerben) %>
  <% createCarousels(11, 20, deVerben) %>
  <% createCarousels(21, 30, deVerben) %>
  <% createCarousels(31, 40, deVerben) %>
  <% createCarousels(41, 50, deVerben) %>
  <% createCarousels(51, 60, deVerben) %>
  <% createCarousels(61, 70, deVerben) %>
  <% createCarousels(71, 80, deVerben) %>
  <% createCarousels(81, 90, deVerben) %>
  <% createCarousels(91, 100, deVerben) %>
  <% createCarousels(101, 110, deVerben) %>
  <% createCarousels(111, 120, deVerben) %>
  <% createCarousels(121, 130, deVerben) %>
  <% createCarousels(131, 140, deVerben) %>
  <% createCarousels(141, 150, deVerben) %>
  <% createCarousels(151, 160, deVerben) %>
  <% createCarousels(161, 173, deVerben) %>



    </div>
</section>



