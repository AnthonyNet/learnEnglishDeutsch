<% const engVerbs = unregelmassigeVerben.verben; %>

<% let createCarousels = (x, y, pokus) => { %>
  
<div class="row mb-5 hideJQ">
  <div class="cover ">
 



<div id="carouselExampleControls<%= y %>" class="carousel slide text-primary p-5 d-flex align-items-center justify-content-center " data-bs-ride="false" style="height: 90vh;">
    <div class="carousel-inner ">
      <div class="carousel-item active ">

        
        <div class="text-center">
          <h1>Irregular Verbs exercise <%=x%> - <%=y%></h1>
        </div>

      </div>


    
    <%  for (let index = x; index <= y; index++) { %>

        <div class="carousel-item">

          <h1 class="text-center">Slovo #<%=index%></h1>

            <div class="card cardIrr text-center" style="width: 18rem; margin: 0 auto;" id="<%= pokus[index].cz %>">
                <div class="card-header">
                  <h3 class=" text-primary mb-1"><%= pokus[index].cz %></h3>
                
            </div>

            <ul class="list-group list-group-flush">
              <li class="list-group-item">Infinitive:</li>
                <li class="list-group-item"><input id="slovo_ID" data-verb="<%= pokus[index].infinitive %>" type="text"></li>
                <li class="list-group-item">Präteritum:</li>
                <li class="list-group-item"><input id="slovo_ID" data-verb="<%= pokus[index].pastTense %>" type="text"></li>
                <li class="list-group-item">Perfektum:</li>
                <li class="list-group-item"><input id="slovo_ID" data-verb="<%= pokus[index].presentPerfect %>" type="text" ></li>
                <li class="list-group-item">Správná odpověď:</li>
                <li class="list-group-item answerCard"><%= pokus[index].infinitive %> <%= pokus[index].pastTense %> <%= pokus[index].presentPerfect %></li>
          </ul>
        </div>

  </div>

       <% } %>
    
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls<%= y %>" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls<%= y %>" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  </div>
  </div>
  
